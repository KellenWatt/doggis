<h1>Users Page</h1>

<article>
	<section>
		<h3>Top Users</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Rank</th>
					<th>User</th>
					<th>University</th>
					<th>Company</th>
					<th>Score</th>
				</tr>
			</thead>
			<tbody>
				<% @top_users.each_with_index do |user, index| %>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= link_to(user.display_name, user_path(user.user_id)) %></td>
					<td><%= user.university %></td>
					<td><%= user.company %></td>
					<td><%= user.score %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</section>
	<section>
		<h3>All Users<%=
			if @pg_count > 1
				render inline: " <small>(#{@pg} of #{@pg_count})</small>"
			end
		%></h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>User</th>
					<th>University</th>
					<th>Company</th>
					<th>Score</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.user_id %></td>
					<td><%= link_to(user.display_name, user_path(user.user_id)) %></td>
					<td><%= user.university %></td>
					<td><%= user.company %></td>
					<td><%= user.score %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= render partial: 'shared/paginator', locals: { pg: @pg, pg_count: @pg_count } %>
	</section>
</article>
