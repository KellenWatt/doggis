<table class="table table-striped">
    <thead>
        <tr>
            <th> User Profile </th>
            <th>
                <% if user_signed_in? and (@user == current_user or current_user.admin) then %>
                    <%= button_to 'Edit', edit_user_path(@user), :method => :get %>
                <%end%>

            </th>
        </tr>
    </thead>
    <tbody
        <tr>
            <td> Name </td>
            <td><%= @user.display_name %></td>
        </tr>
        <tr>
            <td> Score </td>
            <td><%= @user.score %></td>
        </tr>
        <tr>
            <td> University </td>
            <td><%= @user.university %></td>
        </tr>
        <tr>
            <td> Company </td>
            <td><%= @user.company %></td>
        </tr>
    </tbody> 
</table>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Participating in</th>
        </tr>
    </thead>
    <tbody>
        <% @tournaments.each do |tourn| %>
        <tr>
            <td><%= link_to(tourn.name, tournament_path(tourn.tournament_id)) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Solved Problem</th>
            <th>Point Value</th>
        </tr>
    </thead>
    <tbody>
        <% @solves.each do |prob| %>
        <tr>
            <td><%= link_to(prob.name, problem_path(prob.problem_id)) %></td>
            <td><%= prob.score %></td>

        </tr>
        <% end %>
    </tbody>
</table>
<%= button_to "Back to All Users", users_path, :method => :get %>
