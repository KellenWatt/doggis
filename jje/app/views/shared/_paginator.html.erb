<% # expects locals: { pg: int, pg_count: int, typepath: path object, typespath } %>
<nav aria-label="Page navigation">
	<ul class="pagination">
		<li class="<%= (@pg > 1) ? '' : 'disabled' %>">
			<%= link_to(pg > 1 ? url_for(pg: @pg - 1) : '#') do %>
				<span aria-hidden="true">&laquo;</span>
			<% end %>
		</li>

		<% (1..(@pg - 1)).each do |i| %>
			<li><%= link_to(i, url_for(pg: i)) %></li>
		<% end %>

		<li class="disabled"><%= link_to(@pg, '#') %></li>

		<% ((@pg + 1)..(@pg_count)).each do |i| %>
			<li><%= link_to(i, url_for(pg: i)) %></li>
		<% end %>


		<li class="<%= (@pg < @pg_count) ? '' : 'disabled' %>">
			<%= link_to(@pg < @pg_count ? url_for(pg: @pg + 1) : '#') do %>
				<span aria-hidden="true">&raquo;</span>
			<% end %>
		</li>
	</ul>
</nav>
