<h1>Create a new Tournament</h1>

<%= form_for @tournament, url: {action: 'create'} do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :start %>
	<%= f.datetime_select :start %>

	<%= f.label :end %>
	<%= f.datetime_select :end %>

	<br />
	<%= f.submit %>
<% end %>

<%= link_to 'Back', :tournaments %>
