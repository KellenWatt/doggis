<h1>Create a new Tournament</h1>

<%= form_for @tournament, url: {action: 'create'}, html: {class: 'form-horizontal'} do |f| %>
	<div class="form-group">
		<%= f.label :name, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :name, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :start, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.datetime_select :start, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :end, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.datetime_select :end, class: 'form-control' %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-offset-2 col-sm-10">
			<h4>Languages</h4>
		</div>
	</div>
	<div class="form-group">
	<%= fields_for :languages  do |langs_f| %>
		<% (TournamentLanguage::LanguageOptions).each do |(name, key)| %>
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						<%= langs_f.check_box("#{key}") %> <%= "#{name}" %>
					</label>
				</div>
			</div>
		<% end %>
	<% end %>
	</div>

	<br />
	<%= f.submit %>
<% end %>

<%= link_to 'Back', :tournaments %>
